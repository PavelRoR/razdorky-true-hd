@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	#lessons
	#recs
		max-width 860px
	.modal-dialog
		width 900px
	.packet-body
		min-height 192px
@media screen and (max-width 991px)
	header
		margin-bottom: 30px
	#logo
		float: none
		margin 0 auto 5px
	.contacts
		text-align: center
		float: none
	.contact
		display: inline-block
		margin 5px 5px 0
		.fa
			margin 0 3px 0 5px
	#main
		text-align: center
	.main-title
		margin 15px auto 35px
	.button-main
		margin 40px auto 0
	.about-packet
		float: none
@media screen and (max-width 767px)
	#main
		padding-bottom: 40px
	#second
		padding 40px 0 0
	.about-packet-2
		text-align: left
	#get, #plan, #about,#records, #prices
		padding 40px 0
	.packet-body
		min-height 1px
	.modal-dialog
		width 96%
		margin 10px auto
	.general-title-feedback
		margin-top: 40px
	#vk
		margin-bottom: 25px
	#about::before, #main::before, #prices::before
		background-color: rgba(62, 150, 151, .75)
@media screen and (max-width 485px)
	header
		padding 15px 0
		margin-bottom: 15px
	#logo
		width 160px
		height 15px
	.contact .fa
		font-size: 14px
		line-height: 14px
	.contact .fa + span
		font-size: 12px
		line-height 12px
	.main-title
		margin 5px auto 15px
		font-size: 32px
		span
			font-size: 48px
			display block
	.main-info
		span
			font-size: 22px
	.button-main
		margin-top: 30px
	.second-title
		font-size: 26px
		margin-bottom: 20px
	.second-text
		font-size: 20px
	.general-title
		font-size: 28px
		margin-bottom: 30px
	.about-packet
		margin-bottom: 30px
		text-align: center
	.flip-clock-wrapper
		width 100%
		max-width 260px
	.flip-clock-wrapper ul
		height 50px
		margin 3px
	.flip-clock-wrapper ul li
		line-height: 50px
	.flip-clock-wrapper ul li a div.up::after
		top 24px
	.flip-clock-wrapper ul li a div div.inn
		font-size: 40px
	.flip-clock-divider
		height 50px
	.flip-clock-dot
		width 7px
		height 7px
		left 3px
	.flip-clock-dot.top
		top 31px
	.flip-clock-dot.bottom
		bottom: 27px
	.flip-clock-divider .flip-clock-label
	.flip-clock-divider.minutes .flip-clock-label
	.flip-clock-divider.seconds .flip-clock-label
		font-size:  10px
		right: -59px
	.prepayment-title
		font-size: 32px
	.prepayment-text
		margin 5px 0 10px
	.timer-title
		font-size: 28px
		margin-top: 20px
	footer h5
		font-size: 18px
	.soc-buttons a
		margin 10px 5px
	footer #conditions, footer p
		font-size: 12px
@media screen and (max-width 385px)
	header
		margin-bottom 10px
	.main-info
		font-size: 18px
		span
			font-size: 20px
	.button-main
		margin-top: 20px
	#main
		padding-bottom: 30px
	#second
		padding 30px 0 0
	#get, #plan, #about,#records, #prices
		padding 30px 0
	.second-title
		font-size: 24px
		margin-bottom: 15px
	.second-text
		font-size: 18px
	.general-title
		font-size: 26px
	.lessons-links li, .recs-container-links li, .recs-links li
		font-size: 18px
		width 80px
		line-height: 30px
	.lessons, .recs-container, .about-packet, .packet-head, .packet-body, .packet-footer, .prepayment
		padding 15px
	.about-packet-title
		font-size: 26px
	.cost
		margin-bottom: 10px
		&-today
			margin-bottom: 15px
	.lesson-list
		margin-left: 5px
	.lesson-title-modal
		margin-top: 15px
	.general-title-feedback
		margin-top: 30px